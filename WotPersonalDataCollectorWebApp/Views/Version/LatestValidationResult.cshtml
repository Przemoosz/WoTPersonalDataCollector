@using VersionValidateResultModel = WotPersonalDataCollectorWebApp.Models.VersionValidateResultModel
@model VersionValidateResultModel
@{
	ViewData["Title"] = "WPD - Versions validation";
}
<div class="container">
	<div class="row">
		<div class="col-2"></div>
		<div class="col-8">
			<div class="row text-center border-bottom border-2 border-dark mb-2">
				<h4>Last validation result</h4>
			</div>
			<div class="row">
				<div class="container">
					<div class="row">
						<div class="col-2"></div>
						<div class="col-8">
							<div class="container">
								@if (Model == null)
								{
									<div class="row align-content-center mt-4 text-center">
										<p>No validation result available. Go to validation page and request data validation</p>
									</div>
								}
								else
								{
									<div class="row align-content-center">
										<table class="table align-content-center">
											<tr>
												<td>Validation Date</td>
												<td class="text-end">@Model.ValidationDate</td>
											</tr>
											<tr>
												<td>Status</td>
												@{
													if (Model.WasValidationCanceled)
													{
														<td class="text-end">Cancelled</td>
													}
													else
													{
														<td class="text-end">Completed</td>
													}
												}
											</tr>
											<tr>
												<td>Total Objects</td>
												<td class="text-end">@Html.DisplayFor(m => m.TotalItemsInCosmosDb)</td>
											</tr>
											<tr>
												<td>Valid</td>
												<td class="text-end">@Html.DisplayFor(m => m.CorrectVersionDtoCount)</td>
											</tr>
											<tr>
												<td>Invalid</td>
												<td class="text-end">@Html.DisplayFor(m => m.WrongVersionDtoCount)</td>
											</tr>
											<tr>
												<td>Unrecognizable Objects</td>
												<td class="text-end">@Html.DisplayFor(m => m.WrongObjectsCount)</td>
											</tr>
										</table>
									</div>
								}
							</div>
						</div>
					</div>
					<div class="col-2"></div>
				</div>
			</div>
			<div class="row text-center border-top border-2 border-dark mb-2">
				<a class="btn btn-sm btn-secondary align-middle" asp-action="Index">Return to validation page</a>
			</div>
			</div>
		</div>
	<div class="col-2"></div>
	</div>
