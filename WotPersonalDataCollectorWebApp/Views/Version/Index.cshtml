@using VersionValidateViewModel = WotPersonalDataCollectorWebApp.Models.ViewModels.VersionValidateViewModel
@model VersionValidateViewModel
@{
	ViewData["Title"] = "WPD - Versions";
}
<div class="container">
	@if (Model.Message is not null)
	{
		<div class="row bg-warning text-center mb-4 border border-1 border-dark">
			<p class="text-center align-middle mb-0">@Html.DisplayFor(s => Model.Message)</p>
		</div>
	}
	<div class="row">
		<div class="col-2"></div>
		<div class="col-8">
			<div class="row text-center border-bottom border-2 border-dark mb-2">
				<h4>Settings</h4>
			</div>
			<div class="row">
				<div class="container">
					<div class="row">
						<div class="col-12">
							<div class="container">
								<div class="row">
									<p>
										<b>Validate Cosmos DB and ASP.NET dto versions</b>
									</p>
								</div>
								<div class="row">
									<small>Last data version check: XXX</small>
								</div>
								<a class="btn btn-sm btn-success" asp-action="RequestValidationProcess">Validate data</a>
								@if (Model.IsCancellationEnabled ?? false)
								{
									<a class="btn btn-sm btn-danger" asp-action="CancelValidationProcess">Cancel validation</a>
								}
								else
								{
									<a class="btn btn-sm btn-danger disabled" asp-action="CancelValidationProcess">Cancel validation</a>
								}
								<a class="btn btn-sm btn-info" asp-action="RequestValidationProcess">Check results</a>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
		<div class="col-2"></div>
	</div>
</div>